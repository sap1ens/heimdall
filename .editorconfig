# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,gradle,kt}]
indent_style = space
indent_size = 4

[*.{js,ts,jsx,tsx,svelte,json,yaml,yml}]
indent_style = space
indent_size = 2

[*.{html,css,scss}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.properties]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_style = space
indent_size = 2
